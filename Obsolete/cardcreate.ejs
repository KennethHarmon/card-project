<%- include("partials/header") %>
<div class="container">
    <div class="row text-center pt-3" style="display: block;">
        <h1>Create Card:</h1>
    </div>
    <div class="row">
        <div style="width: 30%; margin: 0 auto">
            <form action="/cards" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name = "text" placeholder="name">
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="type" id="typewhite" value="white" checked>
                    <label class="form-check-label" for="typewhite">White</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="types" id="typeblack" value="red">
                    <label class="form-check-label" for="typeblack">Red</label>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-lg btn-block mt-3">Submit</button>
                </div>
            </form>
        </div>
    </div>
    
</div>
<%- include("partials/footer") %>