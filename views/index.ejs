<%- include("partials/header") %>
<div class="homepage">
    <div class="container main tall px-5">
        <div class="row">
            <div class="col-lg-12 red" id="mainleft">
                <div id="redsection">
                    <h1 class="black main-title">Red<span style="background-color: #343A40; color: #DC3546;" class="pb-2">Flags</span></h1>
                    <div class="mainformcontainer">
                        <form action="/game/new" method="POST" class="mt-5">
                            <div class="form-row">
