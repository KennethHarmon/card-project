                        </form>
                        <form action="/game/join" method="POST" class="mt-5">
                            <div class="form-row">
                                <div class="col">
                                    <input class="form-control" type="text" name = "username" placeholder="Enter Username" required>
                                </div>
                                <div class="col">
                                    <input class="form-control" type="text" name = "gameCode" placeholder="Enter game code" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-lg  btn-secondary mt-3">Join Game</button>
                            </div>      
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
